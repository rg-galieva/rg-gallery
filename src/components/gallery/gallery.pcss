@import "../../app/themeVariables.css";

.galleryImage {
  position: relative;
  width: calc((100% - 4rem) / 4);
  margin-right: 1rem;
  margin-bottom: 1rem;
  height: 12rem;
  background-color: var(--c-placeholder);
  overflow: hidden;

  display: flex;
  align-content: center;

  &:hover {
    box-shadow: 0 0 0 3px var(--c-emph);
  }

  & img {
    cursor: pointer;
    display: block;
    max-width: 100%;
    min-height: 100%;
    border: 0;
    object-fit: cover;
  }
}
